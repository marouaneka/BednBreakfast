{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-9">
            <a href="javascript:history.back()" class="txt1" style="font-size: 18px"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp; Go back</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="section-heading text-center">
                <div class="line-"></div>
                <h1>Client</h1>
            </div>
        </div>
    </div>

<div class="row">
    <div class="col-12 col-lg-4"></div>
    <div class="col-12 col-lg-4">

        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th>ClFirstName</th>
                    <td>{{ client.ClFirstName }}</td>
                </tr>
                <tr>
                    <th>ClFamilyName</th>
                    <td>{{ client.ClFamilyName }}</td>
                </tr>
                <tr>
                    <th>ClCountry</th>
                    <td>{{ client.ClCountry }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-12 col-lg-4"></div>
</div>

    <div class="row justify-content-center">
        <div class="col-lg-5"></div>
        <div class="col-lg-1 text-center form-group">
            {{ include('client/_delete_form.html.twig') }}
        </div>
        <div class="col-lg-1">
            <button class="btn btn-success w-50 h-75"><a href="{{ path('client_edit', {'id': client.id}) }}" style="font-size: 16px;color: white">Edit</a></button>
        </div>
        <div class="col-lg-5"></div>
    </div>

{% endblock %}
