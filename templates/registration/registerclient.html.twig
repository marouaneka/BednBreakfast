{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="col-md-6 offset-md-3">
    <div class="check-form">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="section-heading text-center">
                    <div class="line-"></div>
                    <h2>Sign up as a client HERE!</h2>
                </div>
            </div>
        </div>
        {{ form_start(registrationForm) }}

            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.PleaseFillInThisForm.ClFirstName) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.PleaseFillInThisForm.ClFamilyName) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.PleaseFillInThisForm.ClCountry) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.email, {'attr': {'class':'form-control '}}) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class':'form-control '}}) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                </div>
            </div>

            <div class="container-login100-form-btn justify-content-center">
                <div class="col-lg-6 offset-md-3    ">
                    <button class="btn btn-lg btn-success" href="/owner/new">Register</button>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>

{% endblock %}
