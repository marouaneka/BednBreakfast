{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url(../img/blog-img/3.jpg);">
					<span class="login100-form-title-1">
						Sign Up
					</span>
                </div>
                <br><br><br>
                {{ form_start(registrationForm) }}
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            {{ form_row(registrationForm.PleaseFillInThisForm.firstname, {'attr': {'class':'form-control '}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            {{ form_row(registrationForm.PleaseFillInThisForm.familyname, {'attr': {'class':'form-control '}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            {{ form_row(registrationForm.PleaseFillInThisForm.address, {'attr': {'class':'form-control '}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            {{ form_row(registrationForm.PleaseFillInThisForm.country, {'attr': {'class':'form-control '}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            {{ form_row(registrationForm.email, {'attr': {'class':'form-control '}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            {{ form_row(registrationForm.plainPassword, {'attr': {'class':'form-control '}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            {{ form_row(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                </div>

                    <div class="container-login100-form-btn justify-content-center">
                        <div class="col-lg-6 offset-md-3    ">
                            <button class="login100-form-btn" href="/owner/new"> Register </button>
                        </div>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
