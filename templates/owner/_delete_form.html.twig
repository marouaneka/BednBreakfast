<form method="post" action="{{ path('owner_delete', {'id': owner.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ owner.id) }}">
    {% if app.user %}
    {% if app.user.AuthOwner %}
    {% elseif app.user.ClientAuth %}
    {% else %}
    <button class="btn btn-danger">Delete</button>
    {% endif %}
    {% endif %}
</form>
