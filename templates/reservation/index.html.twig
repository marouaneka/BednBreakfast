{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-9">
            <a href="javascript:history.back()" class="txt1" style="font-size: 18px"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp; Go back</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="section-heading text-center">
                <div class="line-"></div>
                <h1>Reservation index</h1>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-12 col-md-2"></div>
        <div class="col">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>DateDebut</th>
                    <th>DateFin</th>
                    <th>Client id</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.id }}</td>
                        <td>{{ reservation.DateDebut ? reservation.DateDebut|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.DateFin ? reservation.DateFin|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.resClient.id }}</td>
                        <td>
                            <a href="{{ path('reservation_show', {'id': reservation.id}) }}"  style="color:blue;font-size: 16px">show</a>
                            <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" style="color:indianred;font-size: 16px">&nbsp;&nbsp;&nbsp;edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="col-12 col-md-2"></div>
    </div>

{% endblock %}
