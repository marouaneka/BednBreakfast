{% extends 'base.html.twig' %}

{% block title %}Client reservations{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-9">
            <a href="javascript:history.back()" class="txt1" style="font-size: 18px"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp; Go back</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="section-heading text-center">
                <div class="line-"></div>
                <h1>Here are your reservations!</h1>
            </div>
        </div>
    </div>
<div class="row">
    <div class="col-12 col-lg-2"></div>
    <div class="col-12 col-lg-8">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Start date</th>
                    <th scope="col">End date</th>
                    <th scope="col">Room name</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.DateDebut ? reservation.DateDebut|date('Y-m-d') : '' }}</td>
                    <td>{{ reservation.DateFin ? reservation.DateFin|date('Y-m-d') : '' }}</td>
                    <td><a href="{{ path('room_show', {'id': reservation.resRoom.id}) }}">{{ reservation.resRoom.summary }}</a></td>
                    <td>
                        <a style="color:blue;font-size: 16px" href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>
                        &nbsp;&nbsp;&nbsp;
                        <a style="color:indianred;font-size: 16px" href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>
                        &nbsp;&nbsp;&nbsp;
                        <a style="color:green;font-size: 16px" href="{{ path('comments_new', {'id': reservation.resRoom.id}) }}">Add a comment!</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-12 col-lg-2"></div>
</div>

    {#<a href="{{ path('reservation_new') }}">Create new</a>#}
{% endblock %}
