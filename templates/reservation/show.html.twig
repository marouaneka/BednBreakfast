{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-9">
            <a href="javascript:history.back()" class="txt1" style="font-size: 18px"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp; Go back</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="section-heading text-center">
                <div class="line-"></div>
                <h1>Reservation</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-4"></div>
        <div class="col-12 col-lg-4">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ reservation.id }}</td>
                </tr>
                <tr>
                    <th>DateDebut</th>
                    <td>{{ reservation.DateDebut ? reservation.DateDebut|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>DateFin</th>
                    <td>{{ reservation.DateFin ? reservation.DateFin|date('Y-m-d') : '' }}</td>
                </tr>

                <tr>
                    <th>Roome name</th>
                    <td>{{ reservation.resRoom.summary }}</td>
                </tr>


                </tbody>
            </table>
        </div>
        <div class="col-12 col-lg-4"></div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-5"></div>
        <div class="col-lg-1">
            {{ include('reservation/_delete_form.html.twig') }}
        </div>

        <div class="col-lg-1">
            <button class="btn btn-success w-50"><a href="{{ path('reservation_edit', {'id': reservation.id}) }}" style="font-size: 16px; color: white">edit</a></button>
        </div>
        <div class="col-lg-5"></div>
    </div>

{% endblock %}
