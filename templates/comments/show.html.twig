{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-9">
        <a href="javascript:history.back()" class="txt1" style="font-size: 18px"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp; Go back</a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-12 col-lg-6">
        <div class="section-heading text-center">
            <div class="line-"></div>
            <h1>Comments</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-4"></div>
    <div class="col-12 col-lg-4">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ comment.id }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ comment.Description }}</td>
                </tr>
                <tr>
                    <th>Stars</th>
                    <td>{{ comment.Stars }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-12 col-lg-4"></div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-5"></div>
    <div class="col-lg-1">
        {{ include('comments/_delete_form.html.twig') }}
    </div>
    <div class="col-lg-1">
        <button class="btn btn-success w-50"><a href="{{ path('comments_edit', {'id': comment.id}) }}" style="color: white; font-size: 16px ">edit</a></button>
    </div>
    <div class="col-lg-5"></div>
</div>

{% endblock %}
