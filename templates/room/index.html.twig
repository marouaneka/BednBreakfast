{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}

    <!-- ##### Rooms Area Start ##### -->
    <div class="row justify-content-center">
        <div class="col-md-9">
            <a href="javascript:history.back()" class="txt1" style="font-size: 18px"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp; Go back</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="section-heading text-center">
                <div class="line-"></div>
                <h1>Room index</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-2"></div>
        <div class="col">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Owner id</th>
                    <th>Summary</th>
                    <th>Description</th>
                    <th>Capacity</th>
                    <th>Superfacy</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for room in rooms %}
                    <tr>
                        <td>{{ room.id }}</td>
                        <td>{{ room.owner.id }}</td>
                        <td>{{ room.summary }}</td>
                        <td>{{ room.description }}</td>
                        <td>{{ room.capacity }}</td>
                        <td>{{ room.superficy }}</td>
                        <td>{{ room.price }}</td>
                        <td>
                            <a href="{{ path('room_show', {'id': room.id}) }}" style="color:blue;font-size: 16px">show</a>
                            <a href="{{ path('room_edit', {'id': room.id}) }}" style="color:indianred;font-size: 16px">&nbsp;&nbsp;&nbsp;edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="col-12 col-md-2"></div>
    </div>


{% endblock %}
